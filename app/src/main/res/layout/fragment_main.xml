<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cicnp.rgtech.cicnpv02.Main.MainFragment"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/main_background"
        android:scaleType="fitXY"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CICNP"
        android:gravity="center_horizontal"
        android:textColor="@color/white"
        android:layout_marginTop="30dp"
        android:textSize="40sp"/>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rowCount="2"
        android:columnCount="3"
        android:layout_gravity="center">


        <LinearLayout
            android:layout_width="@dimen/main_icon_size"
            android:layout_height="@dimen/main_icon_size"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="@dimen/main_icon_margin">

            <Button android:layout_height="@dimen/main_inner_icon_size"
                android:layout_width="@dimen/main_inner_icon_size"
                android:background="@drawable/watch"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Watch"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/main_icon_text_margin"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/main_icon_size"
            android:layout_height="@dimen/main_icon_size"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="@dimen/main_icon_margin">

            <Button android:layout_height="@dimen/main_inner_icon_size"
                android:layout_width="@dimen/main_inner_icon_size"
                android:background="@drawable/add"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add\nBlacklist"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_marginTop="@dimen/main_icon_text_margin"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/main_icon_size"
            android:layout_height="@dimen/main_icon_size"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="@dimen/main_icon_margin">

            <Button android:layout_height="@dimen/main_inner_icon_size"
                android:layout_width="@dimen/main_inner_icon_size"
                android:background="@drawable/search"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Search"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/main_icon_text_margin"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/main_icon_size"
            android:layout_height="@dimen/main_icon_size"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="@dimen/main_icon_margin">

            <Button android:layout_height="@dimen/main_inner_icon_size"
                android:layout_width="@dimen/main_inner_icon_size"
                android:background="@drawable/watch"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Watch"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/main_icon_text_margin"/>

        </LinearLayout>

    </GridLayout>

</android.support.design.widget.CoordinatorLayout>
