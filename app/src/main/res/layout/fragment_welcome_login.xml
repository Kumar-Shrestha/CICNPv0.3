<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cicnp.rgtech.cicnpv02.WelcomeScreen.WelcomeLoginFragment"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LOGIN"
            android:textSize="40sp"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Small text definition for login screen"
            android:textSize="15sp"
            android:textColor="@color/white"/>


        <EditText
            android:layout_marginTop="50dp"
            android:layout_width="@dimen/welcome_edittext_width"
            android:layout_height="50dp"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textColorHint="@color/white"
            android:gravity="center"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:background="@drawable/login_edittext"
            android:id="@+id/welcome_editText_email"/>

        <EditText
            android:layout_marginTop="20dp"
            android:layout_width="@dimen/welcome_edittext_width"
            android:layout_height="50dp"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textColorHint="@color/white"
            android:gravity="center"
            android:hint="Password"
            android:text="sdf"
            android:inputType="textPassword"
            android:background="@drawable/login_edittext"
            android:id="@+id/welcome_editText_password"/>

        <Button
            android:layout_width="@dimen/welcome_button_width"
            android:layout_height="wrap_content"
            android:background="@drawable/login_button"
            android:layout_marginTop="20dp"
            android:text="Login"
            android:textColor="@color/white"
            android:id="@+id/welcome_button_login"
            />

